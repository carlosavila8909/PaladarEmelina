@{
    Layout = "~/Views/Shared/_LayoutHostal.cshtml";
}

<div style="text-align:center;margin-top:20px;">
    <i class="ion-ios-home color_icon"></i>
    @Html.ActionLink(Resources.PaladarHostal.Principal, "Mostrar", "Hostal", null, new { @class = "color_breadcrumb" })

    <span class="padd_breadcrumb">
        <i class="ion-ios-arrow-forward padd_breadcrumb color_icon"></i>
        <span class="color_icon">@Resources.PaladarHostal.Negocio</span>
    </span>
</div>

<section class="mbr-section" id="section_bienvenido" style="background-color: rgb(255, 255, 255); padding-top: 25px; padding-bottom: 40px;">
    <div class="container">
        <div class="row">
            <div class="mbr-table-md-up">
                <div class="mbr-table-cell col-md-5 text-xs-center text-md-right content-size">
                    <h3 class="mbr-section-title display-2" style="text-align:center;">@Resources.PaladarHostal.Negocio</h3>
                    <div class="lead" style="text-align:left !important;">
                        <p>@Resources.PaladarHostal.Negocio_Hostal</p>
                    </div>
                </div>
                <div class="mbr-table-cell mbr-left-padding-md-up mbr-valign-top col-md-7 image-size" style="width: 50%;">
                    <div class="mbr-figure"><img src="@Url.Content("~/assets/images/desktop.jpg")"></div>
                </div>
            </div>
        </div>
    </div>
</section>