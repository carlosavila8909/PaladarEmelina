@model Gestion_Password
@{
    Layout = "~/Views/Shared/_LayoutHostal.cshtml";
}

<div style="text-align:center;margin-top:20px;">
    <i class="ion-ios-home color_icon"></i>
    @Html.ActionLink("Principal", "Mostrar", "Hostal", null, new { @class = "color_breadcrumb" })

    <span class="padd_breadcrumb">
        <i class="ion-ios-arrow-forward padd_breadcrumb color_icon"></i>
        @Html.ActionLink("Administración", "Configuracion", "AdministracionHostal", null, new { @class = "color_breadcrumb" })
    </span>

    <span class="padd_breadcrumb">
        <i class="ion-ios-arrow-forward padd_breadcrumb color_icon"></i>
        <span class="color_icon">Cambiar contraseña</span>
    </span>
</div>

<div class="mbr-section mbr-section__container mbr-section__container--middle" style="padding-top: 20px;padding-bottom:0px !important;">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 text-xs-center">
                <h3 class="mbr-section-title display-2">Cambiar contraseña</h3>
            </div>
        </div>
    </div>
</div>

<div class="overflow-hidden">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="space-30"></div>
                <div class="login-register-container" style="background:#f9f9f9;padding:50px;">
                    @using (Html.BeginForm("CambiarPassword", "Hostal", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()

                        <div class="form-group text-left">
                            @Html.LabelFor(m => m.pass_anterior)
                            @Html.PasswordFor(m => m.pass_anterior, new { @class = "form-control" })
                        </div>

                        <div class="form-group text-left">
                            @Html.LabelFor(m => m.nuevo_pass)
                            @Html.PasswordFor(m => m.nuevo_pass, new { @class = "form-control" })
                        </div>

                        <div class="form-group text-left">
                            @Html.LabelFor(m => m.confirmar_pass)
                            @Html.PasswordFor(m => m.confirmar_pass, new { @class = "form-control" })
                        </div>

                        <div class="clearfix">
                            <div class="pull-right text-right">
                                <input type="submit" class="btn btn-primary btn-lg" value="Guardar">
                            </div>
                        </div>
                    }
                </div>
                <div class="space-30"></div>
            </div>
        </div>
    </div>
</div>
<div style="height:30px;"></div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}