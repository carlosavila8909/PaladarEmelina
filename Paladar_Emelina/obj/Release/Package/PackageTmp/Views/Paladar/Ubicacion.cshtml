@{
    ViewBag.Titulo_pagina = Resources.PaladarHostal.Ubicacion;
}

@section breadcrumb{
    <span class="padd_breadcrumb">
        <i class="ion-ios-arrow-forward padd_breadcrumb"></i>
        @Resources.PaladarHostal.Ubicacion
    </span>
}

<div class="container-fluid no-padd contact-wrapper" id="div_container">
    <div class="row vertical-align-child no-margin" id="div_gmaps">
        <div class="col-md-12 no-padd">
            <div class="google-map-container">
                <div id="googlemaps" style="width:100%;height:400px;"></div>
            </div>
        </div>
    </div>

    <div class="alert alert-info text-center hide" id="div_error">
        @Resources.PaladarHostal.Error_ubicacion
    </div>
</div>

@section Scripts{
    <script src="https://maps.google.com/maps/api/js?key=AIzaSyBENlIxSKmTEK2fJeKjKo_JMxC9jE2IkL4"></script>
    <script src="@Url.Content("~/Content/gmaps/jquery.gmap.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        (function ($) {
            $(document).ready(function () {
                var marker = "@Url.Content("~/Content/marker.png")";
                try
                {
                    $('#googlemaps').gMap({
                        maptype: 'ROADMAP',
                        scrollwheel: false,
                        zoom: 19,
                        markers: [
                            {
                                address: "Casa Coky",
                                //latitude: 21.796970,
                                //longitude: -79.986141,
                                html: "<p style='color:black;font-weight:bold;margin-bottom:3px;text-align:left;'>@Resources.PaladarHostal.Titulo</p><p style='color:black;text-align:left;margin-bottom:0px;'>Calle Chanzoneta #271 entre San Procopio y Luz Trinidad. <br/> Sancti Spíritus. Cuba</p>",
                                popup: true
                            }
                        ]
                    });
                } catch (e) {
                    $("#div_gmaps").addClass("hide");
                    $("#div_error").removeClass("hide");
                    $("#div_container").removeClass("contact-wrapper");
                }
            });
        })(this.jQuery);
    </script>
}