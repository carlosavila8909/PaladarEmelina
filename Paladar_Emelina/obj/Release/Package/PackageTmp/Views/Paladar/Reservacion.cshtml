@model ReservacionModel
@{
    ViewBag.Titulo_pagina = Resources.PaladarHostal.Reservacion;
}

@section breadcrumb{
    <span class="padd_breadcrumb">
        <i class="ion-ios-arrow-forward padd_breadcrumb"></i>
        @Resources.PaladarHostal.Reservacion
    </span>
}

@section CSS{
    <link href="@Url.Content("~/Content/font-awesome/css/font-awesome.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/simple-line-icons/simple-line-icons.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap-datepicker/css/datepicker3.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap-timepicker/css/bootstrap-timepicker.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/components-md.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/plugins-md.css")" rel="stylesheet" />
}

<div class="overflow-hidden">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3" id="div_form_plato">
                <div class="space-30"></div>
                <div class="login-register-container" style="background:#f9f9f9;padding:50px;">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()
                        @Html.Hidden("h_idioma", UICulture)

                        <div class="alert alert-info text-center fade in hide" id="alert_info">
                            @Resources.PaladarHostal.Info_Reservacion
                        </div>

                        <div class="form-group text-left">
                            @Html.LabelFor(m => m.nombre_apellidos, Resources.PaladarHostal.Nombre_apellidos, new { style = "font-size:14px !important;" })
                            @Html.TextBoxFor(m => m.nombre_apellidos, new { @class = "form-control" })
                        </div>

                        <div class="form-group text-left">
                            @Html.LabelFor(m => m.fecha, Resources.PaladarHostal.Fecha, new { style = "font-size:14px !important;" })
                            <div class="input-group date date-picker" data-date-format="dd/mm/yyyy" data-date-start-date="+0d">
                                @Html.TextBoxFor(m=> m.fecha, new { @class = "form-control" })
                                <span class="input-group-btn">
                                    <button class="btn default" type="button" style="min-height:45px !important;"><i class="fa fa-calendar"></i></button>
                                </span>
                            </div>
                        </div>

                        <div class="form-group text-left">
                            @Html.LabelFor(m => m.hora, Resources.PaladarHostal.Hora, new { style = "font-size:14px !important;" })
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.hora, new { @class = "form-control timepicker timepicker-no-seconds" })
                                <span class="input-group-btn">
                                    <button class="btn default" style="height:45px !important;" type="button"><i class="fa fa-clock-o"></i></button>
                                </span>
                            </div>
                        </div>

                        <div class="form-group text-left">
                            @Html.LabelFor(m=> m.cant_acompannantes, Resources.PaladarHostal.Acompannantes, new { style = "font-size:14px !important;" })
                            <div id="spinner1">
                                <div class="input-group input-small">
                                    @Html.TextBoxFor(m => m.cant_acompannantes, new { @class = "spinner-input form-control" })
                                    <div class="spinner-buttons input-group-btn btn-group-vertical" style="padding-bottom:1px !important;">
                                        <button type="button" class="btn spinner-up btn-xs blue" style="border-radius:0px 5px 0px 0px !important;height:21px !important;">
                                            <i class="fa fa-angle-up"></i>
                                        </button>
                                        <button type="button" class="btn spinner-down btn-xs blue borde" style="border-radius:0px 0px 5px 0px !important;height:21px !important;">
                                            <i class="fa fa-angle-down"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="clearfix">
                            <div class="pull-right text-right">
                                <input type="submit" class="btn btn-primary btn-lg" style="background:#c0996b;" value="@Resources.PaladarHostal.Guardar">
                            </div>
                        </div>
                    }
                </div>
                <div class="space-30"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="@Url.Content("~/Content/fuelux/js/spinner.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/bootstrap-datepicker/js/bootstrap-datepicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/bootstrap-timepicker/js/bootstrap-timepicker.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/bootstrap-touchspin/bootstrap.touchspin.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/components-pickers.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/components-form-tools.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/metronic.js")" type="text/javascript"></script>
    
    <script>
        jQuery(document).ready(function () {
            Metronic.init();
            ComponentsPickers.init();
            ComponentsFormTools.init();

            var msg = "@ViewBag.msg";
            if (msg == "OK") {
                $("#alert_info").removeClass("hide");
                setTimeout(function () {
                    $("#alert_info").addClass("hide");
                }, 5000);
            }
        });
    </script>
}