@model List<Reservacion>
@{
    ViewBag.Title = "Reservaciones";
}

@section breadcrumb{
    <span class="padd_breadcrumb">
        <i class="ion-ios-arrow-forward padd_breadcrumb"></i>
        @Html.ActionLink("Administración", "Configuracion", "Administracion", null, new { @class = "color_breadcrumb" })
    </span>

    <span class="padd_breadcrumb">
        <i class="ion-ios-arrow-forward padd_breadcrumb"></i>
        Reservación
    </span>
}

@section CSS{
    <link href="@Url.Content("~/Content/font-awesome/css/font-awesome.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap-datepicker/css/datepicker3.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/components-md.css")" rel="stylesheet" />
}

<style>
    .cart-table > tbody > tr > td {
        padding-bottom: 10px;
        padding-top: 10px;
    }
</style>

@using (Html.BeginForm("EliminarReservacion", "Administracion", FormMethod.Post, new { id = "form_enviar" }))
{
    <div id="static" class="modal fade" tabindex="-1" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">Eliminar</h4>
                </div>
                <div class="modal-body text-left">
                    @Html.Hidden("id_eliminar")
                    <p>
                        ¿Desea eliminar la reservacion?
                    </p>
                    <p>
                        <b>Nombre y Apellidos: </b><span id="span_eliminar_nombre_apellidos"></span>
                    </p>
                    <p>
                        <b>Fecha: </b><span id="span_eliminar_fecha"></span>
                    </p>
                    <p>
                        <b>Hora: </b><span id="span_eliminar_hora"></span>
                    </p>
                    <p>
                        <b>Acompañantes: </b><span id="span_eliminar_acompannantes"></span>
                    </p>
                </div>
                <div class="modal-footer" style="border:1px solid #e5e5e5;">
                    <button type="button" data-dismiss="modal" class="btn blue" onclick="javscript: $('#form_enviar').submit();">Eliminar</button>
                    <button type="button" data-dismiss="modal" class="btn default">Cancelar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-offset-5 col-md-2">
            <div class="input-group input-medium date date-picker" data-date-format="dd/mm/yyyy">
                <input type="text" id="fecha" name="fecha" class="form-control" readonly="readonly" />
                <span class="input-group-btn">
                    <button class="btn default" type="button" style="min-height:45px !important;"><i class="fa fa-calendar"></i></button>
                </span>
            </div>
        </div>
    </div>
    <div class="space-20"></div>

    <div id="div_reservaciones">
        @Html.Partial("_ReservacionesPartial", Model)
    </div>
}

@section Scripts{
    <script src="@Url.Content("~/Content/bootstrap-datepicker/js/bootstrap-datepicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/metronic.js")" type="text/javascript"></script>

    <script>
        jQuery(document).ready(function () {
            Metronic.init();

            if (jQuery().datepicker) {
                $('.date-picker').datepicker({
                    rtl: Metronic.isRTL(),
                    orientation: "left",
                    autoclose: true,
                    clearBtn: true
                });
                $('.date-picker').on("changeDate", function (event) {
                    var fecha = "";
                    if (event.date)
                        fecha = event.date.getDate() + "/" + (event.date.getMonth() + 1) + "/" + event.date.getFullYear();

                    $.ajax({
                        url: "@Url.Action("Reservacion_Result", "Administracion")",
                        method: "POST",
                        data: { fecha: fecha },
                        success: function (data)
                        {
                            $("#div_reservaciones").html(data);
                        }
                    });
                });
            }
        });

        function eliminar(id, nombre_apellidos, fecha, hora, cant_acomp) {
            $("#id_eliminar").val(id);
            $("#span_eliminar_nombre_apellidos").html(nombre_apellidos);
            $("#span_eliminar_fecha").html(fecha);
            $("#span_eliminar_hora").html(hora);
            $("#span_eliminar_acompannantes").html(cant_acomp);
        }
    </script>
}