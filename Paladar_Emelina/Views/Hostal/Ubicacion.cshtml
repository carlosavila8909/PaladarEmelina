@{ 
    Layout = "~/Views/Shared/_LayoutHostal.cshtml";
}

<div style="text-align:center;margin-top:20px;">
    <i class="ion-ios-home color_icon"></i>
    @Html.ActionLink(Resources.PaladarHostal.Principal, "Mostrar", "Hostal", null, new { @class = "color_breadcrumb" })

    <span class="padd_breadcrumb">
        <i class="ion-ios-arrow-forward padd_breadcrumb color_icon"></i>
        <span class="color_icon">@Resources.PaladarHostal.Ubicacion</span>
    </span>
</div>

<section class="mbr-footer mbr-section mbr-section-md-padding" id="section_ubicacion" style="padding-top: 25px; padding-bottom: 60px;text-align:center !important;">
    <div class="row">
        <h3 class="mbr-section-title display-2" style="color:black;">@Resources.PaladarHostal.Ubicacion</h3>
        <div class="google-map-container">
            <div id="googlemaps" style="width:100%;height:400px;"></div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="https://maps.google.com/maps/api/js?key=AIzaSyBENlIxSKmTEK2fJeKjKo_JMxC9jE2IkL4"></script>
    <script src="@Url.Content("~/Content/gmaps/jquery.gmap.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        (function ($) {
            $(document).ready(function () {
                var marker = "@Url.Content("~/Content/marker.png")";
                try
                {
                    $('#googlemaps').gMap({
                        maptype: 'ROADMAP',
                        scrollwheel: false,
                        zoom: 19,
                        markers: [
                            {
                                address: "Casa Coky",
                                //latitude: 21.796970,
                                //longitude: -79.986141,
                                html: "<p style='color:black;font-weight:bold;margin-bottom:3px;text-align:left;'>@Resources.PaladarHostal.Titulo</p><p style='color:black;text-align:left;margin-bottom:0px;'>@Resources.PaladarHostal.Direccion_negocio. <br/> Sancti Spíritus, Cuba.</p>",
                                popup: true
                            }
                        ]
                    });
                } catch (e) {
                    $("#div_gmaps").addClass("hide");
                    $("#div_error").removeClass("hide");
                    $("#div_container").removeClass("contact-wrapper");
                }
            });
        })(this.jQuery);
</script>    
}