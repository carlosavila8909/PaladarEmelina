@{
    Layout = "~/Views/Shared/_LayoutHostal.cshtml";
}

@section CSS{
    <link href="@Url.Content("~/assets/mobirise-gallery/style.css")" rel="stylesheet" />
}

<div style="text-align:center;margin-top:20px;">
    <i class="ion-ios-home color_icon"></i>
    @Html.ActionLink(Resources.PaladarHostal.Principal, "Mostrar", "Hostal", null, new { @class = "color_breadcrumb" })

    <span class="padd_breadcrumb">
        <i class="ion-ios-arrow-forward padd_breadcrumb color_icon"></i>
        <span class="color_icon">@Resources.PaladarHostal.Galeria</span>
    </span>
</div>

<section class="mbr-gallery mbr-section mbr-section-nopadding mbr-slider-carousel" id="gallery1-0" data-filter="false" style="background-color: rgb(255, 255, 255); padding-top: 25px; padding-bottom: 0rem;">
    <h3 class="mbr-section-title display-2" style="text-align:center;">@Resources.PaladarHostal.Galeria_imagenes</h3>
    <div class="mbr-gallery-row">
        <div class="mbr-gallery-layout-default">
            <div>
                <div>
                    <div class="mbr-gallery-item mbr-gallery-item__mobirise3 mbr-gallery-item--p0" data-tags="Awesome" data-video-url="false">
                        <div href="#lb-gallery1-0" data-slide-to="0" data-toggle="modal">
                            <img alt="" src="@Url.Content("~/assets/images/bike-small.jpg")">
                            <span class="icon-focus"></span>
                        </div>
                    </div>
                    
                    <div class="mbr-gallery-item mbr-gallery-item__mobirise3 mbr-gallery-item--p0" data-tags="Responsive" data-video-url="false">
                        <div href="#lb-gallery1-0" data-slide-to="1" data-toggle="modal">
                            <img alt="" src="@Url.Content("~/assets/images/code-man-small.jpg")">
                            <span class="icon-focus"></span>
                        </div>
                    </div>
                    
                    <div class="mbr-gallery-item mbr-gallery-item__mobirise3 mbr-gallery-item--p0" data-tags="Creative" data-video-url="false">
                        <div href="#lb-gallery1-0" data-slide-to="2" data-toggle="modal">
                            <img alt="" src="@Url.Content("~/assets/images/coworkers-small.jpg")">
                            <span class="icon-focus"></span>
                        </div>
                    </div>
                    
                    <div class="mbr-gallery-item mbr-gallery-item__mobirise3 mbr-gallery-item--p0" data-tags="Animated" data-video-url="false">
                        <div href="#lb-gallery1-0" data-slide-to="3" data-toggle="modal">
                            <img alt="" src="@Url.Content("~/assets/images/desktop-small.jpg")">
                            <span class="icon-focus"></span>
                        </div>
                    </div>
                    
                    <div class="mbr-gallery-item mbr-gallery-item__mobirise3 mbr-gallery-item--p0" data-tags="Awesome" data-video-url="false">
                        <div href="#lb-gallery1-0" data-slide-to="4" data-toggle="modal">
                            <img alt="" src="@Url.Content("~/assets/images/room-laptop-small.jpg")">
                            <span class="icon-focus"></span>
                        </div>
                    </div>
                    
                    <div class="mbr-gallery-item mbr-gallery-item__mobirise3 mbr-gallery-item--p0" data-tags="Beautiful" data-video-url="false">
                        <div href="#lb-gallery1-0" data-slide-to="5" data-toggle="modal">
                            <img alt="" src="@Url.Content("~/assets/images/table-small.jpg")">
                            <span class="icon-focus"></span>
                        </div>
                    </div>
                    
                    <div class="mbr-gallery-item mbr-gallery-item__mobirise3 mbr-gallery-item--p0" data-tags="Responsive" data-video-url="false">
                        <div href="#lb-gallery1-0" data-slide-to="6" data-toggle="modal">
                            <img alt="" src="@Url.Content("~/assets/images/windows-books-small.jpg")">
                            <span class="icon-focus"></span>
                        </div>
                    </div>
                    
                    <div class="mbr-gallery-item mbr-gallery-item__mobirise3 mbr-gallery-item--p0" data-tags="Animated" data-video-url="false">
                        <div href="#lb-gallery1-0" data-slide-to="7" data-toggle="modal">
                            <img alt="" src="@Url.Content("~/assets/images/working-area-small.jpg")">
                            <span class="icon-focus"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <div data-app-prevent-settings="" class="mbr-slider modal fade carousel slide" tabindex="-1" data-keyboard="true" data-interval="false" id="lb-gallery1-0">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <ol class="carousel-indicators">
                        <li data-app-prevent-settings="" data-target="#lb-gallery1-0" class="active" data-slide-to="0"></li>
                        <li data-app-prevent-settings="" data-target="#lb-gallery1-0" data-slide-to="1"></li>
                        <li data-app-prevent-settings="" data-target="#lb-gallery1-0" data-slide-to="2"></li>
                        <li data-app-prevent-settings="" data-target="#lb-gallery1-0" data-slide-to="3"></li>
                        <li data-app-prevent-settings="" data-target="#lb-gallery1-0" data-slide-to="4"></li>
                        <li data-app-prevent-settings="" data-target="#lb-gallery1-0" data-slide-to="5"></li>
                        <li data-app-prevent-settings="" data-target="#lb-gallery1-0" data-slide-to="6"></li>
                        <li data-app-prevent-settings="" data-target="#lb-gallery1-0" data-slide-to="7"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img alt="" src="@Url.Content("~/assets/images/bike.jpg")">
                        </div><div class="carousel-item">
                            <img alt="" src="@Url.Content("~/assets/images/code-man.jpg")">
                        </div><div class="carousel-item">
                            <img alt="" src="@Url.Content("~/assets/images/coworkers.jpg")">
                        </div><div class="carousel-item">
                            <img alt="" src="@Url.Content("~/assets/images/desktop.jpg")">
                        </div><div class="carousel-item">
                            <img alt="" src="@Url.Content("~/assets/images/room-laptop.jpg")">
                        </div><div class="carousel-item">
                            <img alt="" src="@Url.Content("~/assets/images/table.jpg")">
                        </div><div class="carousel-item">
                            <img alt="" src="@Url.Content("~/assets/images/windows-books.jpg")">
                        </div><div class="carousel-item">
                            <img alt="" src="@Url.Content("~/assets/images/working-area.jpg")">
                        </div>
                    </div>
                    <a class="left carousel-control" role="button" data-slide="prev" href="#lb-gallery1-0">
                        <span class="icon-prev" aria-hidden="true"></span>
                        <span class="sr-only">@Resources.PaladarHostal.Anterior</span>
                    </a>
                    <a class="right carousel-control" role="button" data-slide="next" href="#lb-gallery1-0">
                        <span class="icon-next" aria-hidden="true"></span>
                        <span class="sr-only">@Resources.PaladarHostal.Siguiente</span>
                    </a>
                    <a class="close" href="#" role="button" data-dismiss="modal">
                        <span aria-hidden="true">×</span>
                        <span class="sr-only">@Resources.PaladarHostal.Cerrar</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="@Url.Content("~/assets/masonry/masonry.pkgd.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/imagesloaded/imagesloaded.pkgd.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/mobirise-gallery/player.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/assets/mobirise-gallery/script.js")" type="text/javascript"></script>
}