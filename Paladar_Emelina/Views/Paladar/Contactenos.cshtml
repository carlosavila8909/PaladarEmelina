@model Contactenos_Model
@{
    ViewBag.Titulo_pagina = Resources.PaladarHostal.Contactenos;
}

<div class="overflow-hidden">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="login-register-container" style="background:#f9f9f9;padding:50px;">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()

                        <div class="alert alert-info text-center" id="alert_info" style="display:none;">
                            @Resources.PaladarHostal.Mensaje_enviado
                        </div>

                        <div class="alert alert-danger text-center" id="alert_error" style="display:none;">
                            @Resources.PaladarHostal.Mensaje_error
                        </div>

                        <div class="form-group text-left">
                            @Html.LabelFor(m => m.nombre_apellidos, Resources.PaladarHostal.Nombre_apellidos, new { style = "font-size:14px !important;" })
                            @Html.TextBoxFor(m => m.nombre_apellidos, new { @class = "form-control" })
                        </div>
                        <div class="form-group text-left">
                            @Html.LabelFor(m => m.email, Resources.PaladarHostal.Correo, new { style = "font-size:14px !important;" })
                            @Html.TextBoxFor(m => m.email, new { @class = "form-control" })
                        </div>
                        <div class="form-group text-left">
                            @Html.LabelFor(m => m.mensaje, Resources.PaladarHostal.Mensaje, new { style = "font-size:14px !important;" })
                            @Html.TextAreaFor(m => m.mensaje, new { @class = "form-control", rows = "5" })
                        </div>
                        <div class="clearfix">
                            <div class="pull-right text-right">
                                <input type="submit" class="btn btn-primary btn-lg" value="@Resources.PaladarHostal.Enviar_mensaje">
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div style="height:50px;"></div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        jQuery(document).ready(function () {
            var msg = "@ViewBag.msg";
            if (msg == "OK") {
                $("#alert_info").css("display", "");
                setTimeout(function () {
                    $("#alert_info").css("display", "none");
                }, 8000);
            }

            if (msg == "Error") {
                $("#alert_error").css("display", "");
                setTimeout(function () {
                    $("#alert_error").css("display", "none");
                }, 8000);
            }
        });
    </script>
}