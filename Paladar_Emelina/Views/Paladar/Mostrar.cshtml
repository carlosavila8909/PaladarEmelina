                         data-start="1000">@Resources.PaladarHostal.Descripcion_publicidad2</div>
                    <div class="tp-caption tp-resizeme slider-button"
                         data-x="['center','center','center','center']" data-hoffset="['0','0','0','0']"
                         data-y="['middle','middle','middle','middle']" data-voffset="['160','160','160','120']"
                         data-whitespace="nowrap"
                         data-transform_idle="o:1;"
                         data-transform_in="opacity:0;s:1500;e:Power3.easeInOut;"
                         data-transform_out="auto:auto;s:300;"
                         data-start="1500"></div>
                </li>
                <li data-transition="random">
                    <img src="@Url.Content("~/Content/bg11.jpg")" alt="" width="1920" height="1000" data-bgposition="center center" data-bgfit="cover" data-bgrepeat="no-repeat" data-bgparallax="10" class="rev-slidebg">
                    <div class="tp-caption tp-resizeme slider-title" style="border:transparent !important;"
                         data-x="['center','center','center','center']" data-hoffset="['0','0','0','0']"
