@model Gestion_Password
@{
    ViewBag.Titulo_pagina = "Cambiar contraseña";
}

@section breadcrumb{
    <span class="padd_breadcrumb">
        <i class="ion-ios-arrow-forward padd_breadcrumb"></i>
        @Html.ActionLink("Administración", "Configuracion", "Administracion")
    </span>

    <span class="padd_breadcrumb">
        <i class="ion-ios-arrow-forward padd_breadcrumb"></i>
        Cambiar contraseña
    </span>
}

<div class="overflow-hidden">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="space-30"></div>
                <div class="login-register-container" style="background:#f9f9f9;padding:50px;">
                    @using (Html.BeginForm("CambiarPassword", "Paladar", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()

                        <div class="form-group text-left">
                            @Html.LabelFor(m => m.pass_anterior, new { style = "font-size:14px !important;" })
                            @Html.PasswordFor(m => m.pass_anterior, new { @class = "form-control" })
                        </div>

                        <div class="form-group text-left">
                            @Html.LabelFor(m => m.nuevo_pass, new { style = "font-size:14px !important;" })
                            @Html.PasswordFor(m => m.nuevo_pass, new { @class = "form-control" })
                        </div>

                        <div class="form-group text-left">
                            @Html.LabelFor(m => m.confirmar_pass, new { style = "font-size:14px !important;" })
                            @Html.PasswordFor(m => m.confirmar_pass, new { @class = "form-control" })
                        </div>

                        <div class="clearfix">
                            <div class="pull-right text-right">
                                <input type="submit" class="btn btn-primary btn-lg" value="Guardar">
                            </div>
                        </div>
                    }
                </div>
                <div class="space-30"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}