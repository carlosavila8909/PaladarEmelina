@model List<Reservacion>

<div class="table-responsive">
    <table class="table table-bordered cart-table">
        <thead>
            <tr>
                <th class="text-center hide">Id</th>
                <th class="text-center"><i class="ion-android-contact"></i>&nbsp;Nombre y Apellidos</th>
                <th class="text-center"><i class="ion-android-calendar"></i>&nbsp;Fecha</th>
                <th class="text-center"><i class="ion-android-time"></i>&nbsp;Hora</th>
                <th class="text-center"><i class="ion-android-contacts"></i>&nbsp;Acompañantes</th>
                <th class="text-center"></th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {
                        string fecha = Utiles.Arreglar_Fecha(item.dia, item.mes, item.anno);
                        string hora = Utiles.Arreglar_Hora(item.hora, item.minuto);
                        <tr>
                            <td class="hide">@item.id_reservacion</td>
                            <td>@item.nombre_apellidos</td>
                            <td>@fecha</td>
                            <td>@hora</td>
                            <td>@item.cant_acompannantes</td>
                            <td>@Html.ActionLink("Eliminar", "", null, new { id = item.id_reservacion }, new { @class = "label label-sm label-danger label-mini", data_toggle = "modal", href = "#static", data_container = "body", onclick = String.Format("eliminar({0},'{1}','{2}','{3}','{4}');", item.id_reservacion, item.nombre_apellidos, fecha, hora, item.cant_acompannantes) })</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">No se encontraron reservaciones.</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
