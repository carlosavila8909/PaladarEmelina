@{ 
    string email_administrador = Utiles.Obtener_Email_Negocio();
}
<section class="mbr-footer mbr-section mbr-section-md-padding" id="contacts5-18" style="background-color: rgb(239, 239, 239); padding-top: 90px; padding-bottom: 60px;">
    <div class="row">
        <div class="mbr-company col-xs-12 col-md-4 col-md-offset-2">
            <div class="mbr-company card">
                <div>
                    <a href="@Url.Action("Mostrar", "Hostal")">
                        @{
                            if (UICulture == "en")
                            {
                                <img src="@Url.Content("~/assets/images/logo_en_footer.png")" class="card-img-top">
                            }
                            else
                            {
                                <img src="@Url.Content("~/assets/images/logo_es_footer.png")" class="card-img-top">
                            }
                        }
                    </a>
                </div>
                <div class="card-block">
                    <p class="card-text">
                        @Resources.PaladarHostal.Footer_primero_hostal @Html.ActionLink(Resources.PaladarHostal.Paladar, "Mostrar", "Paladar", null, new { style = "font-weight:700;" }), @Resources.PaladarHostal.Footer_segundo_hostal
                    </p>
                </div>
            </div>
        </div>

        <div class="mbr-company col-xs-12 col-md-4">
            <h4 style="font-size:1rem;font-weight:700;">@Resources.PaladarHostal.Datos_contacto</h4>
            <div class="mbr-company card" style="margin-top:31px;">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <span class="list-group-icon"><span class="etl-icon icon-phone mbr-iconfont-company-contacts5"></span></span>
                        <span class="list-group-text">+53 52461807</span>
                    </li>
                    <li class="list-group-item">
                        <span class="list-group-icon"><span class="etl-icon icon-map-pin mbr-iconfont-company-contacts5"></span></span>
                        <span class="list-group-text">@Html.ActionLink(Resources.PaladarHostal.Direccion_negocio, "Ubicacion", "Hostal")</span>
                    </li>
                    <li class="list-group-item active">
                        <span class="list-group-icon"><span class="etl-icon icon-envelope mbr-iconfont-company-contacts5"></span></span>
                        <span class="list-group-text"><a href="mailto:@email_administrador">@email_administrador</a></span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>
<footer class="mbr-small-footer mbr-section mbr-section-nopadding" id="footer1-2" style="background-color: rgb(50, 50, 50); padding-top: 1.75rem; padding-bottom: 1.75rem;">
    <div class="container">
        <p class="text-xs-center">© @Resources.PaladarHostal.Copyright @DateTime.Now.Year. @Resources.PaladarHostal.Titulo</p>
    </div>
</footer>
